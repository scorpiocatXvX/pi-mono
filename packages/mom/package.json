{
	"name": "@mariozechner/pi-mom",
	"version": "0.52.12",
	"description": "Slack bot that delegates messages to the pi coding agent",
	"type": "module",
	"bin": {
		"mom": "dist/main.js",
		"mom-service": "dist/service-runner.js",
		"mom-service-ctl": "dist/service-control.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"CHANGELOG.md"
	],
	"scripts": {
		"clean": "rm -rf dist",
		"build": "tsgo -p tsconfig.build.json && chmod +x dist/main.js",
		"dev": "tsgo -p tsconfig.build.json --watch --preserveWatchOutput",
		"run:slack-service": "tsx src/service-runner.ts",
		"run:slack-supervisor": "tsx src/service-supervisor.ts",
		"dev:slack-service": "tsx src/service-supervisor.ts",
		"restart:slack-service": "tsx src/service-control.ts restart",
		"stop:slack-service": "tsx src/service-control.ts stop",
		"status:slack-service": "tsx src/service-control.ts status",
		"test:services": "tsx --test test/services/*.test.ts",
		"test:services:routing": "tsx --test test/services/routing.test.ts",
		"test:services:context": "tsx --test test/services/slack-context-service.test.ts",
		"test:services:run": "tsx --test test/services/mom-run-service.test.ts",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"dependencies": {
		"@anthropic-ai/sandbox-runtime": "^0.0.16",
		"@mariozechner/pi-agent-core": "^0.52.12",
		"@mariozechner/pi-ai": "^0.52.12",
		"@mariozechner/pi-coding-agent": "^0.52.12",
		"@sinclair/typebox": "^0.34.0",
		"@slack/socket-mode": "^2.0.0",
		"@slack/web-api": "^7.0.0",
		"chalk": "^5.6.2",
		"croner": "^9.1.0",
		"diff": "^8.0.2"
	},
	"devDependencies": {
		"@types/diff": "^7.0.2",
		"@types/node": "^24.3.0",
		"typescript": "^5.7.3"
	},
	"keywords": [
		"slack",
		"bot",
		"ai",
		"agent"
	],
	"author": "Mario Zechner",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/badlogic/pi-mono.git",
		"directory": "packages/mom"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
